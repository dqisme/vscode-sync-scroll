{
	"name": "sync-scroll",
	"displayName": "Sync Scroll",
	"description": "Make split panels scroll synchronically",
	"version": "1.3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/dqisme/vscode-sync-scroll.git"
	},
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"publisher": "dqisme",
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"icon": "logo.png",
	"contributes": {
		"commands": [
			{
				"command": "syncScroll.changeMode",
				"title": "Change Sync Scroll Mode"
			},
			{
				"command": "syncScroll.copyToAllCorrespondingPositions",
				"title": "Copy to All Corresponding Places"
			},
			{
				"command": "syncScroll.jumpToNextPanelCorrespondingPosition",
				"title": "Jump to Next Panel Corresponding Position"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "syncScroll.jumpToNextPanelCorrespondingPosition",
					"group": "navigation"
				},
				{
					"command": "syncScroll.copyToAllCorrespondingPositions",
					"group": "1_modification"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"build": "vsce package"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vsce": "^1.79.3",
		"vscode-test": "^1.3.0"
	}
}
